<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.skorpion.dbtimetable.MainActivity">
<LinearLayout

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:text="@string/db_transport" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/ferryToCentral"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="Ferry to CENTRAL from DB" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/ferryFromCentral"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="Ferry from CENTRAL to DB" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="16dp"
        android:layout_height="2dp"
        android:background="#000000"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:text="Bus Timetable" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/db01"
        android:padding="16dp"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:text="DB01R: DB PLAZA  to  TUNG CHUNG" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/db01b"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="DB01R: TUNG CHUNG  to  DB PLAZA" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="2dp"
        android:background="#C0C0C0"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/db02"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="DB02R: DB PLAZA  to  AIRPORT" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/db02b"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="DB02R: AIRPORT  to  DB PLAZA" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="2dp"
        android:background="#C0C0C0"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/db03"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="DB03R: DB PLAZA to SUNNY BAY" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:id="@+id/db03b"
        android:padding="16dp"
        android:textAlignment="center"
        android:text="DB03R: SUNNY BAY to DB PLAZA" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="2dp"
        android:background="#C0C0C0"/>








</LinearLayout>

</ScrollView>

